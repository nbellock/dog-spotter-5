<div class="container">
	<div class="row">
		<button type="button" class="text-white btn btn-info filter-btn">Filter Dogs by Breed</button>
		<button type="button" class="btn btn-info show-all-btn">Show All Breeds</button>
		<div class="col-md-12 dog-filter-col">
			<form id="filter-dogs" name="filter-dogs">
				<ul>
					<div class="col-xs-6 col-sm-4 col-md-2">
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="basset hound" class="dog">Basset Hound</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="beagle" class="dog">Beagle</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="boxer" class="dog">Boxer</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="bull dog" class="dog">Bull Dog</label></li>
					</div>
					<div class="col-xs-6 col-sm-4 col-md-2">
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="dalmation" class="dog">Dalmation</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="doberman" class="dog">Doberman</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="cockapoo" class="dog">Cockapoo</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="collie" class="dog">Collie</label></li>
					</div>
					<div class="col-xs-6 col-sm-4 col-md-2">
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="foxhound" class="dog">Foxhound</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="german shepherd" class="dog">German Shepherd</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="golden retriever" class="dog">Golden
								Retriever</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="goldendoodle" class="dog">Goldendoodle</label></li>
					</div>
					<div class="col-xs-6 col-sm-4 col-md-2">
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="greyhound" class="dog">Greyhound</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="maltese" class="dog">Maltese</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="mutt" class="dog">Mutt</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="pit bull" class="dog">Pit Bull</label></li>
					</div>
					<div class="col-xs-6 col-sm-4 col-md-2">
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="pomeranian" class="dog">Pomeranian</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="poodle" class="dog">Poodle</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="portuguese water dog" class="dog">Portuguese
								Water Dog</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="pug" class="dog">Pug</label></li>
					</div>
					<div class="col-xs-6 col-sm-4 col-md-2">
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="saint bernard" class="dog">Saint Bernard</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="shih tzu" class="dog">Shih Tzu</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="siberian husky" class="dog">Siberian Husky</label></li>
						<li><label><input id="dogcheckbox" type="checkbox" name="dog" value="yorkshire terrier" class="dog">Yorkshire
								Terrier</label></li>
					</div>
					<div class="col-md-12">
						<button type="button" class="btn btn-info dog-filter-btn">Submit</button>
					</div>
				</ul>
			</form>
		</div>
	</div>

	<div class="row all-dogs-listings">
		<div class="col-md-12 dog-listing-col">
			{{#each dogdata}}
			<div class="col-xs-12 col-md-3 dog-listing" id={{id}} data-dogBreed="{{breed}}">
				<p class="dog-listing-title">{{owner_name}} | Breed: {{breed}}</p>
				<p>Treats: {{treats}}</p>

				<img class="dog-image" src="/uploads/{{image}}">

				<div>
					<button class="view-profile btn btn-info btn-md dog-listing-btn" data-toggle="modal" data-target="#dogModal-{{id}}"><i
						 class="fa fa-paw" aria-hidden="true"></i></button>
					<button class="btn btn-info btn-md dog-listing-btn treat-btn" data-treatid="{{id}}" data-treats="{{treats}}">Give
						Treat</button>
				</div>
			</div>

			<!-- Modal -->
			<div class="modal fade" id="dogModal-{{id}}" role="dialog">
				<div class="modal-dialog">

					<!-- Modal content-->
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close close-modal" data-dismiss="modal">&times;</button>
							<h2 class="modal-title">{{this.owner_name}}</h2>
							<h4 class="modal-title">Breed: {{this.breed}} | Location: {{location}}</h4>
						</div>
						<div class="modal-body">

							<img class="dog-image" src="uploads/{{image}}">

							<ul class="chart">
								<p class="chart-key">0% = Low | 25% = Moderate | 50% = Average | 75% = Above Avg | 100% = High
									<li>
										<span style="width:{{this.shedding}}%" title="Amount of Shedding: {{this.shedding}}%"></span>
									</li>
									<li>
										<span style="width:{{this.energy}}%" title="Energy Level: {{this.energy}}%"></span>
									</li>
									<li>
										<span style="width:{{this.trainability}}%" title="Trainability: {{this.trainability}}%"></span>
									</li>
									<li>
										<span style="width:{{this.kid}}%" title="Kid Friendly: {{this.kid}}%"></span>
									</li>
									<li>
										<span style="width:{{this.groom}}%" title="Easy to Groom: {{this.groom}}%"></span>
									</li>
									<li>
										<span style="width:{{this.drool}}%" title="Likeliness to Drool: {{this.drool}}%"></span>
									</li>
									<li>
										<span style="width:{{this.bark}}%" title="Likeliness to Bark: {{this.bark}}%"></span>
									</li>
									<li>
										<span style="width:{{this.independence}}%" title="Independence Level: {{this.independence}}%"></span>
									</li>
									<li>
										<span style="width:{{this.weight}}%" title="*Approximate Weight: {{this.weight}}%"></span>
									</li>
							</ul>
							<ul class="weight-key">*Where:
								<li>0% = Toy Dog (0-20lbs)</li>
								<li>25% = Small Dog (21-40lbs)</li>
								<li>50% = Medium Dog (41-65lbs)</li>
								<li>75% = Large Dog (66-89lbs)</li>
								<li>100% = Very Large Dog (90+lbs)</li>
							</ul>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default close-modal" data-dismiss="modal">Close</button>
						</div>
					</div>

				</div>
			</div>

			{{/each}}
		</div>
	</div> <!-- End Row -->
</div>

<footer class="main-footer"></footer>