
<div class="container text-center register-page">
<div class = "row">
<div class = "col-lg-12">
  <form action="/api/newOwner" method="POST">
    <h2 class = "text-center survey-header">Register</h2>
    <h4 class = "text-center survey-header">Please fill in all fields below.</h4>

    <div class = "wrap">
      <label class = "statement"><b>Username</b></label>
      <input type="text" placeholder="Enter Username" name="uname" required>

      <label class = "statement"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="psw" required>

      <label class = "statement"><b>First Name</b></label>
      <input type="text" placeholder="First Name" name="fn" required>

      <label class = "statement"><b>Last Name</b></label>
      <input type="text" placeholder="Last Name" name="ln" required>

      <label class = "statement"><b>E-mail</b></label>
      <input type="text" placeholder="E-mail" name="email" required>

      <label class = "statement"><b>Address</b></label>
      <input type="text" placeholder="Address (Not required)" name="address">
      <br>
      <button type="submit" class="btn btn-lg btn-primary" id="submit" data-toggle="modal">Register</button>
      <br>
      <label class ="statement">Already have an account? <a href = "/login">Click here to log in!</a></label>
    </div>
  </form>
</div>
</div>
</div>
<footer class="main-footer"></footer>
